extends base

block content
  main.main
    .card-container
      each tour in tours
        .card
          .card__header
            .card__picture
              img.card__picture-img(src=`/img/tours/${tour.imageCover}`, alt=`${tour.name}`)

          .card__details
            h4.card__sub-heading= `${tour.name}`

            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-map-pin')
              span= tour.startLocation.description
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
              span= tour.startDates[0].toLocaleString("tr", { month: "long", year: "numeric" })
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-flag')
              span= `${tour.locations.length} durak`
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-user')
              span= `${tour.maxGroupSize} kişi`

          .card__footer
            p
              span.card__footer-value= `${tour.price} TL`
              |
              span.card__footer-text (kişi başı)
            p.card__ratings
              span.card__footer-value= `${tour.ratingsAverage} / 5`
              |
              span.card__footer-text= `oy (${tour.ratingsQuantity})`
            a.btn.btn--green.btn--small(href=`/tour/${tour.slug}`) Detaylar
